<div class="d-flex flex-column col-md-4 mx-auto login">
  <h1 class="text-center font-weight-bolder">Login</h1>
  <%= form_tag sessions_path do |form| %>
    <div class="field">
      <label class="text-left">Email/Username</label>
      <%= text_field_tag :login, nil, placeholder: 'Enter username or email', class: 'form-control' %>
    </div>
    <div class="field">
      <label class="text-left">Password</label>
      <%= password_field_tag :password, nil, placeholder: 'Enter Password', class: 'form-control' %>
    </div>
    <div class="actions mt-4">
      <%= submit_tag 'Login', class: 'btn btn-blue btn-block' %>
    </div>
  <% end %>
</div>
