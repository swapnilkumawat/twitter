$('#tweet-<%= @tweet.id %>').html("<%= j render 'tweets/feed_index', tweet: @tweet %>");

if ($('.tweet-show').length > 0) {
  $('#tweet-show').html("<%= j render 'tweets/tweet_show', tweet: @tweet %>");  
}

$(".fav").click(function(){
  var tweet_id = $(this).find('input').val();
  $.ajax({
    type: 'POST',
    beforeSend: function(xhr) {xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))},
    url: '/tweets/' + tweet_id + '/likes',
    data: {},
    dataType: "script",
    success: function () {
    },
    error: function () {
    }
  });
});